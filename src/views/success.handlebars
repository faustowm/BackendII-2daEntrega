<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<div class="success-container" style="display: flex; flex-direction: column; align-items: center; background-color: var(--secondary-color); margin: 2rem 25%; padding: 2rem; border-radius: 1rem; border: 2px solid var(--primary-color);">
    <h1 class="tituloLog" style="color: var(--accent-color);">
        <i class="fas fa-check-circle" style="color: var(--primary-color); margin-right: 10px;"></i>
        ¡Compra Exitosa!
    </h1>
    <div class="ticket-details" style="text-align: center; font-weight: bold; color: var(--text-color);">
        <h2>Detalles del Ticket</h2>
        <h3>Ticket: <span style="color: var(--primary-color);">{{ticket.code}}</span></h3>
        <p>Monto total: <span style="color: var(--accent-color);">${{ticket.amount}}</span></p>
        <p>Fecha de compra: <span style="color: var(--text-color);">{{formatDate ticket.purchase_datetime}}</span></p>
    </div>

    {{#if purchasedItems.length}}
    <h4 style="color: var(--primary-color);">Artículos comprados:</h4>
    <ul style="list-style-type: none; padding: 0;">
        {{#each purchasedItems}}
        <li style="color: var(--text-color);">{{this.product.title}} - Cantidad: {{this.quantity}}</li>
        {{/each}}
    </ul>
    {{/if}}

    <div class="rojo" style="background-color: rgba(255, 0, 0, 0.1); padding: 15px; border-radius: 1rem; margin-top: 15px;">
        {{#if failedItems.length}}
        <h4 style="text-align: center; color: var(--accent-color);">Sin stock:</h4>
        <ul style="list-style-type: none; padding: 0;">
            {{#each failedItems}}
            <div style="text-align: center;"> {{this.product.title}} - Cantidad: {{this.quantity}}</div>
            {{/each}}
        </ul>
        {{/if}}
    </div>

    <a href="/products" class="btn btn-primary" style="display: flex; width: 13rem; justify-content: center; margin-top: 20px; background-color: var(--primary-color); color: white; border-radius: 5px; text-decoration: none;">
        <i class="fas fa-shopping-cart" style="margin-right: 5px;"></i>
        Seguir Comprando
    </a>
</div>



    {{#if purchasedItems.length}}
    <h4>Artículos comprados:</h4>
    <ul>
        {{#each purchasedItems}}
        <li>{{this.product.title}} - Cantidad: {{this.quantity}}</li>
        {{/each}}
    </ul>
    {{/if}}
    
    <div class="rojo" style="background-color: rgba(255, 0, 0, 0.111); padding: 15px; border-radius: 1rem; margin-top: 15px;">
        {{#if failedItems.length}}
        
        <h4 style="text-align:center">Sin stock:</h4><br>
        <ul>
            {{#each failedItems}}
            <div style="text-align:center;"> {{this.product.title}} - Cantidad: {{this.quantity}}</div>
            {{/each}}
        </ul>
        {{/if}}
    </div>


    <a href="/products" class="btn btn-primary hBtn" style="display: flex;width: 13rem;justify-content: center;">Seguir
        Comprando</a>
</div>"